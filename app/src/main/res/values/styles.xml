<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Location TextView -->
    <style name="textViewLocation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">40dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/location_mark</item>
        <item name="android:drawableEnd">@drawable/arrow_down</item>
    </style>

    <!-- Notification Button -->
    <style name="imageButtonNotification">
        <item name="android:background">@drawable/notification_mark</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">40dp</item>
    </style>

    <!-- 최대 최소 온도 텍스트 뷰 -->
    <style name="textViewMaxMinTemperature">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <!-- 온도 텍스트 뷰-->
    <style name="textViewTemperature">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- textViewToday -->
    <style name="textViewToday">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- textViewDate -->
    <style name="textViewDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 내용 담고있는 레이아웃-->
    <style name="cornerLayout">
        <item name="android:background">@drawable/corner_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <!-- Weather Content-->
    <style name="weatherContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 오늘 날씨 아이템 뷰-->
    <style name="itemViewTextViewTodayWeatherTemperature">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>